<div class="formulario">

	<%= form_for(@product, :url => {:controller => "admin/products", :action => :create}, :method => :post) do |f| %>
		<%= f.label :name, "Nome" %>
			<%= f.text_field :name %>

			<%= f.label :abstract, "Resumo" %>
			<%= f.text_area :abstract, class: "tinymce" %>

			<%= f.label :description, "Descrição" %>
			<%= f.text_area :description, class: "tinymce" %>

			<%= f.label :price, "Preço" %>
			<%= f.text_field :price %>

			<%= f.label :stock_count, "Número em stock" %>
			<%= f.text_field :stock_count %>

			<%= f.label :picture, "Imagem" %>
			<%= f.file_field :picture %>

			<%= f.label :is_active, "Activo" %>
			<%= f.check_box :is_active %>

			<%= f.submit "Inserir" %>
	<% end %>

</div>