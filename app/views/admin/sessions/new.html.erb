<div class="formulario">

	<%= form_for(:session, :url => {:controller => "admin/sessions", :action => :create}, :method => :post) do |f| %>

		<%= f.label :email, "E-mail" %>
		<%= f.text_field :email %>

		<%= f.label :password, "Password" %>
		<%= f.password_field :password %>

		<%= f.submit "Login", class: "btn_submit_formulario" %>

	<% end %>

