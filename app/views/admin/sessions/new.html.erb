<div class="login_outer_wrapper">
	<div class="login_inner_wrapper">
		<div class="login_box">
			<h1>Login</h1>

			<div class="form_field">

				<%= form_for(:session, :url => {:controller => "admin/sessions", :action => :create}, :method => :post) do |f| %>

					<%= f.label :email, "E-mail" %>
					<%= f.text_field :email %>

					<%= f.label :password, "Password" %>
					<%= f.password_field :password %>

					<div class="actions_wrapper">
						<div class="action_button">
							<%= f.submit "Login" %>
						</div>
					</div>

				<% end %>

			</div>
		</div>
	</div>
</div>