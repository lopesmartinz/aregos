<h1>Contacte-nos</h1>

<%= render :partial => "shared/error_messages", :locals => { :object => @general_interaction }  %>

<div class="form_field">

	<%= form_for(@general_interaction) do |f| %>

		<%= f.label :sender_name %>
		<%= f.text_field :sender_name %>

		<%= f.label :sender_email %>
		<%= f.text_field :sender_email %>

		<%= f.label :subject %>
		<%= f.text_field :subject %>

		<%= f.label :description %>
		<%= f.text_area :description %>

		<div class="actions_wrapper">
			<div class="action_button">
				<%= f.submit "Enviar" %>
			</div>
		</div>

	<% end %>

</div>

<div class="aditional_info">
	<strong>Outros Contactos</strong>
	<p>
		Morada: Rua da Mata, nº114 – 4660-102, Caldas de Aregos<br/>
		Telemóvel: 966 648 970
	</p>		
</div>
