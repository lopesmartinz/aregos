<style>
.products {
	margin: 0 -14px;
	/*padding-top: 1em;*/
}
h1 {
	font-size: 1.3em;
	border: 0;
	margin-bottom: 0.5em;
}
.products img {
	border: 1px dotted #ccc;
}
</style>

<div class="products">
	<ul id="products_carousel">
		<% @products.each do |p| %>
			<li class="three_columns_content_wrapper">
				<h1><%= link_to p.name, p %></h1>			
				<%= image_tag("/images/products/" + p.thumbnail, :width => "258") unless p.thumbnail.nil?  %>			
				<p><%= raw p.abstract %></p>				
				<div class="price_wrapper">
					<div class="price"><%= number_to_currency(p.price, :unit => "â‚¬", format: "%n %u") %></div>				
					<div class="price_extra_info">mais portes de envio</div>
					<div class="actions_wrapper">
						<div class="action_button">
							<%= button_to "Adicionar ao Carrinho", {:controller => :carts, :action => :add_to_cart, product_id: p.id}, :method => :post %>
						</div>
					</div>
				<div>
			</li>
		<% end %>
	</ul>
</div>

<script type="text/javascript">
	$("#products_carousel").carouFredSel({
		circular: true,
		infinite: true,
		auto    : true,
		scroll  : {
			items           : 1,
			duration        : 1000,
			timeoutDuration : 8000
		},
		prev    : {
			button  : "#foo2_prev",
			key     : "left"
		},
		next    : {
			button  : "#foo2_next",
			key     : "right"
		},
		pagination  : "#foo2_pag"
	});
</script>

