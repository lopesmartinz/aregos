<h1>Recuperar de Password</h1>

<div class="form_field">

	<%= form_for(@user, url: {:controller => :users, :action => :send_password_recover_email}, :method => :post) do |f| %>

		<%= f.label :email, "E-mail" %>
		<%= f.text_field :email %>

		<div class="actions_wrapper">
			<div class="action_button">
				<%= f.submit "Recuperar Password" %>
			</div>
		</div>

	<% end %>

</div>